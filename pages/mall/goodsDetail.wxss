.tab_img{
  position: relative;
}
swiper{
  width:750rpx;
  height:750rpx;
}
swiper image{
  width:750rpx;
  height:750rpx;
}
.tab_img .v_img{
  width:750rpx;
  height:750rpx;
}
.tab_img .r_box{
  width:100rpx;
  height:50rpx;
  background:rgba(0,0,0,0.3);
  border-radius:25rpx;
  color:#fff;
  position:absolute;
  right:25rpx;bottom:25rpx;
  text-align: center;
  line-height:50rpx;
  font-size:26rpx;
}
.detail_box{
  background:#fff;
  padding:30rpx 30rpx 40rpx;
}
.detail_box .price_box{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.detail_box .price_box .p_left{
  display:flex;
  align-items:baseline;
}
.detail_box .price_box .p_right{
  /* background:#eee; */
  color:#909090;
  padding:5rpx 20rpx;
  border-radius:20rpx;
  font-size:28rpx;
}
.detail_box .price_box .p_text1{
  font-size:36rpx;
  color:#e72b1f;
  margin-right:26rpx;
}
.detail_box .price_box .p_text1 text{
  font-size:28rpx;
}
.detail_box .price_box .p_text2{
  font-size:24rpx;
  color:#909090;
  text-decoration:line-through;
}
.detail_box  .title1{
  font-size:32rpx;
  margin-top:20rpx;
}
.detail_box .title2{
  color:#666;
  font-size:30rpx;
  margin-top:20rpx;
}


.g-box{
  width:607rpx;
  padding:36rpx 40rpx;
  background:#fff;
  border-radius:24rpx;
  margin:34rpx auto 0;
}
.g-box .d-img{
  width:606rpx;
  height:606rpx;
  border:2rpx  solid #eee;
}
.g-box .title{
  font-size:30rpx;
  color:#545454;
  margin-top:20rpx;
}
.g-box .price{
  display: flex;
  align-items: flex-end;
  margin-top:20rpx;
}
.g-box .price .p1{
  font-size:34rpx;
  color:#ff636e;
  font-weight: bold;
  margin-right:10rpx;
}
.g-box .price .p2{
  font-size:24rpx;
  color:#d9d9d9;
  text-decoration:line-through;
}
.d-box{
  padding:30rpx 0;
  background:#fff;
  margin:30rpx auto 140rpx;
}
.d-box .t_box{
  display: flex;
  justify-content: center;
}
.d-box .t_box .b_b{
  display: flex;
  align-items: center;
}
.d-box .t_box .border{  
  width:80rpx;
  height:2rpx;
  background:#828282;
}
.d-box .t_box .title{
  font-size:40rpx;
  color:#666;
  margin:0 15rpx;
}
.d-box .img-list{
  margin-top:30rpx;

}
.d-box .img-list image{
  width:100%;
  vertical-align: top;
  border:none;
}
.change-btn{
  width:100%;
  height: 100rpx;
  color:#fff;
  font-size:32rpx;
  background:#f3302e;
  text-align:center;
  line-height:100rpx;
  position: fixed;
  bottom:0;left:0;
}


.mask_box{
  width:100%;
  height:100%;
  position:fixed;
  top:0;left:0;
  background:rgba(0,0,0,0.3);
}
.mask_box .hide_mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;left:0;
}
.mask_box .m_box{
  max-height:70vh;
  min-height:50vh;
  width:100%;
  position: fixed;
  bottom:0;left:0;
  border-radius: 20rpx 20rpx 0 0;
  background:#fff;
  width:690rpx;
  padding:0 30rpx 100rpx;
}
.mask_box .cloes_btn{
  width:64rpx;
  height:64rpx;
  position: absolute;
  top:30rpx;
  right:15rpx;
}
.mask_box .top{
  display:flex;
  align-items: center;
  margin:30rpx auto 0;
}
.mask_box .top image{
  width:240rpx;
  height:240rpx;
  margin-right:15rpx;
}
.mask_box .info{
  font-size:28rpx;
  width:500rpx;
}
.mask_box .info .p_text1{
  font-size:46rpx;
  color:#e72b1f;
  margin-right:26rpx;
}
.mask_box .info .p_text1 text{
  font-size:28rpx;
}
.mask_box .info  .title1{
  font-size:32rpx;
  margin-top:20rpx;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
color:#413232;

}
.mask_box .info .title2{
  color:#666;
  font-size:30rpx;
  margin-top:10rpx;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
color:#666;
}
.mask_box .sku_box{
  margin-top:30rpx;
  padding:30rpx 0;
  border-top:2rpx solid #f7f7f7;
  border-bottom:2rpx solid #f7f7f7;
}
.mask_box .sku_box .s_text{
  font-size:32rpx;
}
.mask_box .sku_box .sku_list{
  display:flex;
  align-items: center;
  margin-top:20rpx;
}
.mask_box .sku_box text{
  padding:0 10rpx;
  border:2rpx solid #eee;
  font-size:30rpx;
  border-radius:10rpx;
  margin-right:20rpx;
  background:#f7f7f7;
  min-width:102rpx;
  height:62rpx;
  line-height: 62rpx;
  text-align: center;
  border:1rpx solid #f7f7f7;
  
}
.mask_box .sku_box text.active{
  background:#b2dad1;
  border:1rpx solid #222;
}
.mask_box .num_box{
  padding:30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:2rpx solid #f7f7f7;
  margin-bottom:50rpx;
  font-size:32rpx;
}
.mask_box .select_num{
  margin:20rpx 0;
  display: flex;
  align-items: center;
}
.mask_box .select_num .rev_box{
  width:52rpx;
  height:52rpx;
}
.mask_box .select_num .rev_box, .add_box{
  width:52rpx;
  height:52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask_box .rev{
  width:26rpx;
  height:4rpx;
}
.mask_box .add{
  width:26rpx;
  height:26rpx;
}
.mask_box .num_box .num{
  display:inline-block;
  width:87rpx;
  height:52rpx;
  font-size:30rpx;
  background:#f6f6f6;
  text-align:center;
  line-height: 52rpx;
}
.mask_box .bottom{
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:100rpx;
  font-size:32rpx;
  width:100%;
  position: absolute;
  bottom:0;left:0;
  border-top:2rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx 2rpx rgba(0,0,0,0.1);
}
.mask_box .bottom .total{
  width:50%;
}
.mask_box .bottom .total text{
  padding-left:50rpx;
}
.mask_box .bottom .ch_btn{
  height:100rpx;
  width:50%;
  background:#f3302e;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  font-size:32rpx;
}

.audio_list{
  width:620rpx;
  margin-left:32rpx;
  margin-top:30rpx;
  max-height: 400rpx;
  overflow: auto;
  margin-bottom:30rpx;
}
.audio_list .a_li{
  display:flex;
  justify-content: space-between;
  align-items: center;
  color:#b1b1b1;
  font-size:24rpx;
  padding:10rpx 0;
}
.audio_list .a_li .name{
  color:#909090;

}
.audio_list .a_li .time{
  display:flex;
  align-items: center;
}
.audio_list .a_li image{
  width:27rpx;
  height:27rpx;
  margin-right:10rpx;
}
.voice_img{
  width:50rpx;
  height:50rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.arrow1{
  width:41rpx;
  height:16rpx;
}

.arrow2{
  width:41rpx;
  height:16rpx;
}
.voice_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.voice_text{
  padding:30rpx 0;
  border-top:2rpx solid #f6f6f6;
}