page{
  background:#fff;
}

.address-box{
  width:100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
  position: fixed;
  top:0;left:0;right:0;bottom:0;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#333;
}
.add-box{
  width:100%;
  border-top:2rpx solid #eee;
  
}
.add-box .title{
  text-align: center;
  font-size:40rpx;
  font-weight: bold;
}
.add-box .a-list{
  display: flex;
  justify-content: space-between;
  align-items:center;
  border-bottom:2rpx solid #eee;
  width:690rpx;
  margin:0 auto;
  padding:20rpx 0;
}
.add-box .a-list.remarks{
  align-items:top;
  height:100rpx;
  border-top:2rpx solid #e0e0e0;
}
.add-box .a-list .back2{
  width:12rpx;
  height:22rpx;
}
.add-box .a-list.remarks textarea{
  width:530rpx;
  /* border:2rpx solid #ccc; */
  height: 60rpx;
  margin-top:24rpx;
}
.add-box .a-text{
  font-size:32rpx;  
}
.add-box input{
  width:480rpx;
  text-align:left;
  height: 60rpx;
  font-size:32rpx;
}
.add-box .a-list .picker{
  font-size:30rpx;
  width:420rpx;
  height:60rpx;
  margin-top:8rpx;
  display: flex;
  align-items: center;
  justify-content:flex-start;
  margin-left:36rpx;
}

.add-box .a-list textarea{
  width:480rpx;
  height: 100rpx;
  border-radius:8rpx;
  font-size:30rpx;
}
.add-box .btn-box{
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
  padding-bottom:80rpx;
}
.add-box .a-list.last{
  border-bottom:none;
}
.add-box .a-list .set_btn{
  font-size:32rpx;
  color:#75b2b7;
  text-align: center;
  padding:20rpx 0;
  text-decoration: underline;
}
.add-box .a-list .remind-box{
  display:flex;
  align-items: center;
}
.add-box .a-list .set_btn{
  width:73rpx;
  height:43rpx;
}
.add-box .a-list .remind-box text{
  font-size:24rpx;
  padding-right:12rpx;
  opacity:0.42;
  color:#000;
}
.add-box .a-list .delText{
  color:#f3302e;
  text-align: center;
  padding:20rpx 0;
}
.add-box .btn-box .add-btn{
  background:none;
  width:620rpx;
  height: 88rpx;
  color:#fff;
  background:#75b2b7!important;
  border-radius:44rpx;
  font-weight: normal;
  line-height:88rpx;
  padding:0;
  text-align: center;
  margin:0 auto;
}
.add-box .btn-box .tip{
  font-size:28rpx;
  color:#909090;
  margin-top:15rpx;
  text-align:center;
}

input::-webkit-input-placeholder {
         /* placeholder颜色  */
         color: #999;
          /* placeholder字体大小  */
        font-size: 30rpx;
}
textarea::-webkit-input-placeholder {
  /* placeholder颜色  */
    color: #999;
   /* placeholder字体大小  */
  font-size: 30rpx;
}